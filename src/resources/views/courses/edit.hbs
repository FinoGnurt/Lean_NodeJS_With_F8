<div class="mt-4">
  <h3>Cập nhật khoá học</h3>
  <form
    class="mt-4"
    method="post"
    action="/courses/{{course._id}}/update?_method=put"
  >
    <div class="form-group mt-3">
      <label for="name">Tên khoá học</label>
      <input
        type="text"
        class="form-control"
        value="{{course.name}}"
        id="name"
        name="name"
      />
    </div>
    <div class="form-group mt-3">
      <label for="description">Mô tả</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
      >{{course.description}}"</textarea>
    </div>
    <div class="form-group mt-3">
      <label for="videoId">Video ID</label>
      <input
        type="text"
        class="form-control"
        value="{{course.videoId}}"
        id="videoId"
        name="videoId"
      />
    </div>
    <div class="form-group mt-3">
      <label for="level">Trình độ</label>
      <input
        type="text"
        class="form-control"
        value="{{course.level}}"
        id="level"
        name="level"
      />
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
  </form>
</div>